<% include ../partials/header %>


<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Romi website</h1>
             <% if(currentUser && currentUser.username === "romana"){ %>
            <p>
                <a class="btn btn-primary btn-large" href="/candlepainting/newProduct">Add New Candle</a>
            </p>
             <% }%>
         </div>
     </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% products.forEach(function(product){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                   <img src="<%= product.image %>" style="width:100%">
                   <div class="caption">
                       <h4><%= product.name %></h4>
                   </div>
                   <p>
                       <a href="/candlepainting/<%= product._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div> 
     
</div>

<% include ../partials/footer %>